<UserControl x:Class="Client.Views.Notifications.AcceptDecline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views.Notifications"
             mc:Ignorable="d" 
             d:DesignHeight="170" d:DesignWidth="320">
    <Grid Background="#FF0B245B">
        <TextBox x:Name="notificationText" Background="#FFC5E4FF" IsHitTestVisible="False" Focusable="False" BorderBrush="Transparent" HorizontalAlignment="Left" Height="110" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="buttonAccept" IsEnabled="False" Content="Accept" HorizontalAlignment="Left" Height="27" Margin="158,133,0,0" VerticalAlignment="Top" Width="70" Click="ButtonAccept_Click"/>
        <Button x:Name="buttonDecline" IsEnabled="False" Content="Decline" HorizontalAlignment="Left" Height="27" Margin="240,133,0,0" VerticalAlignment="Top" Width="70" Click="ButtonDecline_Click"/>

    </Grid>
</UserControl>
